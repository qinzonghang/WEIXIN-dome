<view class="map-box">
    <image class="back" src="../../images/mapbg.png" alt=""></image>
    <view class="map">
        <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
    </view>
    <view class="text">
        <view class="top">去过的地方</view>
        <view class="province">省份：
            <text class="provinces" wx:for="{{province}}">{{item.provinceName}}</text>
            <text class="prm">{{m}}个</text>
        </view>
        <view class="city">城市：
            <text class="citys" wx:for="{{citys}}">{{item.citysName}}</text>
            <text class="cin">{{n}}个</text>
        </view>
    </view>
</view>