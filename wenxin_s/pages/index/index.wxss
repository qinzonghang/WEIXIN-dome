/**index.wxss**/
.title{
  width: 100%;
  height: 48rpx;
  color: red;
  border-bottom: solid 4rpx red;
}
.child{
  width: 100%;
  height: 250rpx;
  border-bottom: solid 3rpx #999;
  display: flex;
  align-items: center;
}
.child image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.text{
  display: flex;
  margin-left:20rpx;
  flex-direction: column;
  height: 66%;
  width: 66%;
  justify-content: space-around;
}
.namesong{
  color: red;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break:break-all;
  -webkit-line-clamp:3;
}